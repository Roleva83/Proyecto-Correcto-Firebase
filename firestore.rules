rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /businesses/{businessId} {
      allow read, write: if request.auth != null;
    }
    
    match /archivos_subidos/{archivoId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.usuario_id;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.usuario_id;
    }
    
    match /usuarios/{userId}/{documents=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
